{
  "name": "pdjr-skplugin-alarm-manager",
  "version": "2.2.0",
  "description": "Issue notification and other outputs in response to Signal K alarm conditions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "signalk-plugin-enabled-by-default": true,
  "scripts": {
    "format": "prettier-standard 'index.js'",
    "publish": "yq -o=json -I=2 resources/openApi.yaml > resources/openApi.json",
    "test": "mocha",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "webpack --watch --mode development",
    "build": "tsc && webpack --mode production",
    "clean": "rimraf ./public",
    "bundle-analyzer": "webpack-bundle-analyzer --port 4200 public/stats.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdjr-signalk/pdjr-skplugin-alarm-manager.git"
  },
  "keywords": [
    "signalk-node-server-plugin",
    "signalk-plugin-configurator",
    "signalk-category-utility"
  ],
  "author": "Paul Reeve <preeve@pdjr.eu>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/pdjr-signalk/pdjr-skplugin-alarm-manager/issues"
  },
  "homepage": "https://github.com/pdjr-signalk/pdjr-skplugin-alarm-manager#readme",
  "directories": {},
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@types/node": "^22.7.2",
    "bootstrap": "^4.6.2",
    "font-awesome": "^4.7.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^5.1.2",
    "react-select": "^3.2.0",
    "reactstrap": "^5.0.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.3.0",
    "simple-line-icons": "^2.5.5",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "signalk-libdelta": "github:pdjr-signalk/signalk-libdelta"
  }
}
